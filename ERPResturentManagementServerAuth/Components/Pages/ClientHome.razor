@using ERPResturentManagementServerAuth.Components.Layout
@using FirstBlazerProject.Components.Pages
@using MudBlazor
@using Microsoft.AspNetCore.Components
@using System.Globalization;

@inject IJSRuntime jsruntime
@inherits EmployeeListBase
@layout ClientLayout
@rendermode InteractiveServer

@page "/"
<div>
	<section style="background-color:azure;">
		<div class="con1-welcom-section1">
			<div class="con1">
				<h2>Welcome  </h2>
				<h1>Solitary Green Resort</h1>
				<h3>Nuwara Eliya</h3>
			</div>
		</div>
		<hr />
	</section>
	<section style="background-color:aliceblue; margin-top:-1rem;">
		<div class="con2-selectbar-secton2">
			<div><p>OFFERS</p></div>
			<span style="font-size:25px">*</span>
			<div> <p>EXPERIENCES</p></div>
			<span style="font-size:25px">*</span>
			<div><p>EVENT</p></div>
			<span style="font-size:25px">*</span>

			<div><p>ESG</p></div>
			<span style="font-size:25px">*</span>

			<div><p>GIFT CARDS</p></div>
			<span style="font-size:25px">*</span>

			<div><p>ABOUTUS</p></div>
			<span style="font-size:25px">*</span>

			<div><p>BOOK DIRECT</p></div>
		</div>
		<hr />
	</section>
	<section>
	
		<div class="con3-quckBooking-section3">
			<div>
				@* <MudSelect @bind-Value="stringValue" Placeholder="Please Select"  AdornmentColor="Color.Primary">
					<MudSelectItem Value="@("Pizza")" Disabled="true"> Aaaa (Disabled)</MudSelectItem>
					<MudSelectItem Value="@("Burger")">Burger</MudSelectItem>
					<MudSelectItem Value="@("Hotdog")">Hot Dog</MudSelectItem>
				</MudSelect> *@
				<select required @bind="stringValue">
					<option >Select Resort</option>
					<option>Solitary Green Resort - Nuwara Eliya</option>
					<option>Amazon Beach Resort - Trincomale</option>
					<option disabled>JCUB Resort - Trincomale </option>
					<option></option>
				</select>
			</div>
			<div>
				<MudStack AlignItems="AlignItems.Center" Style="width:650px; height:450px">
					<MudDateRangePicker PickerVariant="@_variant" @bind-DateRange="@_dateRange" Margin="Margin.Dense" />
					<MudSpacer />
					<MudToggleGroup T="PickerVariant" SelectionMode="SelectionMode.SingleSelection" Value="@_variant" ValueChanged="@OnValueChanged"
									Color="Color.Primary" CheckMark="true" FixedContent="false">

					</MudToggleGroup>
				</MudStack>
			</div>
			<div>
				<label>Rooms:</label>
				<select required>
					<option >0</option>
					<option >1</option>
					<option>2</option>
					<option>3</option>
					<option>4</option>
					<option>5</option>
				</select>
			</div>
			<div>
				<label>Adults:</label>
				<select required>
					<option>0</option>
					<option>1</option>
					<option>2</option>
					<option>3</option>
					<option>4</option>
					<option>4</option>
				</select>
			</div>
		</div>
	</section>
</div>


<style>
	.con1-welcom-section1 {
		display: flex;
		justify-content: center;
		font-family: cursive;
		text-align: center;
	}

	.con2-selectbar-secton2 {
		display: flex;
		gap: 1rem;
		justify-content: center;
		height: 1rem;
	}

	.con3-quckBooking-section3 {
		display: flex;
		gap: 2rem;
		justify-content: center;
		height: 3rem;
		color: black;
	}
</style>


@code {
	private PickerVariant _variant = PickerVariant.Dialog;
	private DateRange _dateRange { get; set; }

	private void OnValueChanged(PickerVariant variant)
	{
		_dateRange = null;
		_variant = variant;
	}
	private string stringValue { get; set; }

}