		new ChartSeries() { Name = "Expences", Data = new double[] { 19, 24, 35, 13, 28, 15, 13, 16, 40 } },
		new ChartSeries() { Name = "Profit", Data = new double[] { 8, 6, 11, 13, 4, 16, 10, 16, 20 } },
	};
