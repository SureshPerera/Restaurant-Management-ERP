<MudChart ChartType="ChartType.StackedBar" ChartSeries="@Series" XAxisLabels="@XAxisLabels" Width="500px" Height="250px">
	<CustomGraphics>
		<style>
			.heavy {
				font: bold 30px Helvetica;
			}

			.Rrrrr {
				font: italic 40px Helvetica;
				fill: rgb(62,44,221);
			}
		</style>
		<text x="80" y="35" class="heavy"></text>
		<text x="105" y="70" class="Rrrrr"></text>
	</CustomGraphics>
</MudChart>


