@page "/Reservations/Dashboard"
@using ResortManagementApp.Models.Reservation
@using ResortManagementApp.Models.Reservation.OnlineBookingModel
@using ResortManagementApp.Pages.CheckInCheckOut
@using ResortManagementApp.Pages.DashBoard.Chart
@layout MainLayout

<style>
    .dashboard-container {
        background: linear-gradient(135deg, #588157 0%, #3a5a40 100%);
        min-height: 100vh;
        padding: 2rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .dashboard-header {
        background: white;
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 32px rgba(52, 78, 65, 0.2);
        border: 1px solid rgba(163, 177, 138, 0.3);
    }

    .dashboard-title {
        color: #344e41;
        font-weight: 700;
        font-size: 2.5rem;
        margin: 0;
        background: linear-gradient(135deg, #588157 0%, #344e41 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-align: center;
    }

    .dashboard-subtitle {
        color: #3a5a40;
        font-size: 1.1rem;
        text-align: center;
        margin-top: 0.5rem;
        font-weight: 400;
    }

    .quick-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 1.5rem;
        flex-wrap: wrap;
    }

    .quick-action-btn {
        background: linear-gradient(135deg, #588157 0%, #3a5a40 100%);
        color: #dad7cd;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(88, 129, 87, 0.3);
    }

        .quick-action-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(88, 129, 87, 0.5);
            background: linear-gradient(135deg, #3a5a40 0%, #344e41 100%);
            color: #dad7cd;
            text-decoration: none;
        }

    .metrics-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .metric-card {
        background: rgba(218, 215, 205, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 8px 32px rgba(52, 78, 65, 0.15);
        border: 1px solid rgba(163, 177, 138, 0.3);
        transition: all 0.3s ease;
        overflow: hidden;
        position: relative;
        min-height: 140px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

        .metric-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(52, 78, 65, 0.25);
            background: rgba(163, 177, 138, 0.2);
        }

        .metric-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #588157, #3a5a40);
            border-radius: 20px 20px 0 0;
        }

    .metric-header {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .metric-icon {
        width: 50px;
        height: 50px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        background: linear-gradient(135deg, rgba(88, 129, 87, 0.15) 0%, rgba(58, 90, 64, 0.15) 100%);
        border: 2px solid rgba(88, 129, 87, 0.3);
        color: #344e41;
    }

    .metric-content h6 {
        color: #3a5a40;
        font-size: 0.9rem;
        font-weight: 600;
        margin: 0 0 0.5rem 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .metric-value {
        color: #344e41;
        font-size: 2rem;
        font-weight: 700;
        margin: 0.5rem 0;
        background: linear-gradient(135deg, #588157 0%, #344e41 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .metric-change {
        font-size: 0.8rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.25rem;
    }

        .metric-change.positive {
            color: #588157;
        }

        .metric-change.negative {
            color: #344e41;
        }

        .metric-change.neutral {
            color: #3a5a40;
        }

    .analytics-section {
        background: white;
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 32px rgba(52, 78, 65, 0.15);
        border: 1px solid rgba(163, 177, 138, 0.3);
    }

    .section-title {
        color: #344e41;
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .section-icon {
        width: 24px;
        height: 24px;
        background: linear-gradient(135deg, #588157 0%, #3a5a40 100%);
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #dad7cd;
        font-size: 0.8rem;
    }

    .charts-grid {
        display: grid;
        grid-template-columns: 400px 1fr;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .chart-container {
        background: rgba(218, 215, 205, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: 0 8px 32px rgba(52, 78, 65, 0.15);
        border: 1px solid rgba(163, 177, 138, 0.3);
        transition: all 0.3s ease;
    }

        .chart-container:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 40px rgba(52, 78, 65, 0.2);
        }

    .secondary-charts {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
    }

    .status-indicator {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        background: rgba(88, 129, 87, 0.15);
        color: #344e41;
        border: 1px solid rgba(88, 129, 87, 0.3);
    }

    .status-dot {
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: #588157;
        animation: pulse 2s infinite;
    }
/* 
    keyframes pulse {
        0%, 100%

    {
        opacity: 1;
    }

    50% {
        opacity: 0.5;
    }

    } */

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .info-card {
        background: rgba(218, 215, 205, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 6px 25px rgba(52, 78, 65, 0.12);
        border: 1px solid rgba(163, 177, 138, 0.3);
        transition: all 0.3s ease;
    }

        .info-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 35px rgba(52, 78, 65, 0.18);
            background: rgba(163, 177, 138, 0.2);
        }

        .info-card h6 {
            color: #3a5a40;
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .info-card .value {
            color: #344e41;
            font-size: 1.2rem;
            font-weight: 700;
        }

    /* media (max-width: 768px) {
        .charts-grid

    {
        grid-template-columns: 1fr;
    } */

    .dashboard-title {
        font-size: 2rem;
    }

    .metrics-grid {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }

    
</style>

