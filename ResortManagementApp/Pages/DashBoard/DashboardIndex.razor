@inject HttpClient http
@code {
    // Sample data - replace with actual data from your services
    private int currentOccupancy = 78;
    private int availableRooms = 12;
    private int maintenanceRooms = 3;
    private int pendingCheckouts = 8;
    private int todayArrivals = 15;
    private decimal guestSatisfaction = 4.6m;

    public int newOnlienBooking { get; set; }
    public int newDirectBooking { get; set; }
    public int checkIn { get; set; }
    public int checkOut { get; set; }
    public double TotalRevenue { get; set; }
    public double TotalBalance { get; set; }
    public double TotalIncome { get; set; }
    public double TotalExpence { get; set; }


    protected override async Task OnInitializedAsync()
    {
        // Load real-time data here
        await LoadDashboardData();
        StateHasChanged();

    }

    private async Task LoadDashboardData()
    {
        try
        {
            var OnlineBooking = await http.GetFromJsonAsync<List<OnlineBookingModel>>("https://localhost:4000/api/OnlineBooking");
            if(OnlineBooking != null)
            {
                newOnlienBooking = OnlineBooking.Count(a=>a.Conformation == true);
                checkIn += OnlineBooking.Count(a => a.CheckIn);
                checkOut += OnlineBooking.Count(a => a.CheckOut);
            }
            else
            {
                Console.WriteLine("Err : OnlineBooking not loaded");
            }
            var DirectBooking = await http.GetFromJsonAsync<List<DirectBookingModel>>("https://localhost:4000/api/DirectBooking");
            if(DirectBooking != null)
            {
                newDirectBooking = DirectBooking.Count(a => a.Conformation == true);
                checkIn += DirectBooking.Count(a => a.CheckIn);
                checkOut += DirectBooking.Count(a => a.CheckOut);

            }
            else
            {
                Console.WriteLine("Err : DirectBooking not loaded");
            }

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
        }
    }
}