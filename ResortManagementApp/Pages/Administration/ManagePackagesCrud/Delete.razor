@page "/Administration/ManagePackages/Delete/{Id:guid}"
@using ResortManagementApp.Models.Administration.DTOS
@using ResortManagementApp.Models.Administration.ManagePackages
@using ResortManagementApp.Models.Administration.ManageRooms
@using ResortManagementApp.Pages.ComponentCss

@layout MainLayout

<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-6">
			<div class="card shadow-lg">
				<div class="card-header bg-danger text-center text-white">
					<h3>Delete Package</h3>
				</div>

				<div class="card-body" style="font-size: 15px;">
					@if (PackagesDto == null)
					{
						<p><Searching /></p>
					}
					else
					{
						<p>
							Are you sure you want to delete package with name
							<strong>@PackagesDto.PackageName</strong>?
						</p>

						<div class="d-flex justify-content-center mt-4 gap-3">
							<button class="btn btn-danger fw-bold" @onclick="DeletePackages">Delete</button>
							<a class="btn btn-secondary fw-bold" href="/Administration/ManagePackages">Cancel</a>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>

@inject HttpClient http
@inject NavigationManager navManager
@code {
	[Parameter]
	public Guid Id { get; set; }
	public Packages? Packages { get; set; }
	public PackagesDto? PackagesDto { get; set; } = new();

	protected override async Task OnInitializedAsync()
	{
		try
		{
			// Fetch the customer's info by ID
			PackagesDto = await http.GetFromJsonAsync<PackagesDto>($"https://localhost:4000/api/Package/{Id}");

		}
		catch (Exception ex)
		{
			Console.WriteLine("Error loading customer: " + ex.Message);
		}
	}
	private async Task DeletePackages(MouseEventArgs args)
	{
		try
		{
			try
			{
				var responce = await http.DeleteFromJsonAsync<PackagesDto>($"https://localhost:4000/api/Package/{Id}");

				navManager.NavigateTo("/Administration/ManagePackages");
			}
			catch (Exception ex)
			{
				Console.WriteLine(ex.Message);
			}

		}
		catch (Exception ex)
		{
			Console.WriteLine("Error : " + ex.Message);
		}
	}
}
