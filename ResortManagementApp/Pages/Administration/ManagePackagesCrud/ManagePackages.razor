@page "/Administration/ManagePackages"
@using ResortManagementApp.Models.Administration.DTOS
@using ResortManagementApp.Models.Administration.ManageRooms
@using ResortManagementApp.Pages.ComponentCss
@layout MainLayout

<div class="container my-4">

    <!-- Page Header -->
    <div class="mb-4 text-center">
        <h2 class="fw-bold rounded py-3 text-white" style="background-color:#344e41;">
            Manage Packages
        </h2>
    </div>

    <div class="row g-4" style="display:flex;">

        <!-- Action Panel -->
        <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
            <div>
                <a href="/Administration/ManagePackages/Create" class="btn btn-custom">
                    + Add New Package
                </a>
            </div>
            <div>
                <a href="/Administration" class="btn btn-action">
                    ← Back
                </a>
            </div>
        </div>

        <!-- Packages Table -->
        <div>
            <div class="card shadow-sm">
                <div class="card-header table-header">
                    Package List
                </div>

                <div class="card-body p-0">
                    @if (PackagesDtos == null)
                    {
                        <div class="d-flex justify-content-center p-4">
                            <Searching />
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th>Package Name</th>
                                        <th>Basis</th>
                                        <th>Package Details</th>
                                        <th>Room Rate Autumn</th>
                                        <th>Room Rate Spring</th>
                                        <th>Room Rate Summer</th>
                                        <th>Room Rate Winter</th>
                                        <th>Entitlemeal 1</th>
                                        <th>Entitlemeal 2</th>
                                        <th>Special Package 1</th>
                                        <th>Special Package 2</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in PackagesDtos!)
                                    {
                                        <tr>
                                            <td>@item.PackageName</td>
                                            <td>@item.Basis</td>
                                            <td>@item.PackageDetails</td>
                                            <td>@item.RoomRateAutumn</td>
                                            <td>@item.RoomRateSpring</td>
                                            <td>@item.RoomRateSummer</td>
                                            <td>@item.RoomRateWinter</td>
                                            <td>@item.Entitlemeal1</td>
                                            <td>@item.Entitlemeal2</td>
                                            <td>@item.SpecialPackage1</td>
                                            <td>@item.SpecialPackage2</td>
                                            <td class="text-center">
                                                <a class="btn btn-sm btn-edit" href="/Administration/ManagePackages/Edit/@item.Id">
                                                    Edit
                                                </a>
                                                <a class="btn btn-sm btn-delete" href="/Administration/ManagePackages/Delete/@item.Id">
                                                    Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    body {
        background-color: #dad7cd;
    }

    /* Buttons */
    .btn-custom {
        background-color: #3a5a40;
        color: white;
        font-weight: bold;
        border-radius: 8px;
    }

        .btn-custom:hover {
            background-color: #588157;
            color: white;
        }

    .btn-action {
        background-color: #a3b18a;
        color: #344e41;
        font-weight: 600;
        border-radius: 6px;
    }

        .btn-action:hover {
            background-color: #588157;
            color: white;
        }

    /* Card */
    .card {
        background-color: #ffffff;
        border: none;
        border-radius: 10px;
    }

    .table-header {
        background-color: #588157;
        color: white;
        font-weight: bold;
        font-size: 1rem;
    }

    /* Table */
    table thead {
        background-color: #a3b18a;
        color: #344e41;
    }

    table tbody tr:nth-child(even) {
        background-color: #f8f9fa;
    }

    table tbody tr:hover {
        background-color: #e9f5ec;
    }

    /* Action Buttons */
    .btn-edit {
        background-color: #3a5a40;
        color: white;
        margin-right: 4px;
    }

        .btn-edit:hover {
            background-color: #588157;
        }

    .btn-delete {
        background-color: #c0392b;
        color: white;
    }

        .btn-delete:hover {
            background-color: #e74c3c;
        }
</style>

@inject HttpClient Http;

@code {
	
	public List<PackagesDto>? PackagesDtos = new List<PackagesDto>();
	protected async override Task OnInitializedAsync()
	{
		PackagesDtos = await Http.GetFromJsonAsync<List<PackagesDto>>("https://localhost:4000/api/Package");
		StateHasChanged();

	}

}
