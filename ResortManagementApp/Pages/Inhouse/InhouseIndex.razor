@page "/Reservations/Inhouse"
@using ResortManagementApp.Pages.CheckInCheckOut
@layout MainLayout

<div class="container my-4">

    <!-- Header -->
    <h3 class="mb-4 text-center">Reservation Management</h3>

    <!-- Date Navigation Section -->
    <section class="mb-4">
        <div class="d-flex justify-content-around align-items-center rounded p-3" style="backdrop-filter: blur(100%); background-color: cornsilk;">
            <button class="btn btn-warning">Previous Day</button>

            <input type="date" class="form-control form-control-sm w-auto" name="calendar" />

            <button class="btn btn-warning">Next Day</button>

            <div class="d-flex flex-column">
                <label for="pickDate" class="mb-1">Pick Date</label>
                <input type="date" id="pickDate" class="form-control form-control-sm w-auto" name="pickDate" />
            </div>
        </div>
    </section>

    <!-- View Booking and In-House Summary -->
    <section class="mb-4">
        <div class="d-flex justify-content-between flex-wrap gap-3">

            <div>
                <button class="btn btn-success mb-3">View Booking</button>
            </div>

            <div class="flex-fill">
                <ViewBookingGrid />
            </div>

            <div class="bg-azure rounded p-3" style="min-width: 200px;">
                <label class="fs-5 fw-bold d-block mb-2">In-House List</label>
                <div>Adults: <strong>19</strong></div>
                <div>Kids: <strong>0</strong></div>
                <div>Infants: <strong>0</strong></div>
            </div>

        </div>
    </section>

    <!-- Meal Breakdown Section -->
    <section class="mb-4">
        <div class="d-flex justify-content-center">
            <div class="bg-azure w-100 rounded p-3">
                <MealBrackDown />
            </div>
        </div>
    </section>

    <!-- Actions and Invoice Section -->
    <section>
        <div class="d-flex flex-wrap gap-4">

            <!-- Action Buttons -->
            <div class="d-flex flex-column flex-shrink-0 gap-3">
                <div class="bg-azure d-flex flex-column gap-2 rounded p-3">
                    <label class="fw-bold">Current Room Bill</label>
                    <input type="text" class="form-control form-control-sm w-75" name="roomBill" readonly />
                </div>

                <button class="btn btn-success">Add Extras</button>
                <button class="btn btn-success">Amend Stay</button>
                <button class="btn btn-success">Pay</button>
                <button class="btn btn-success">Check-Out</button>
                <button class="btn btn-success">Cancellation</button>
            </div>

            <!-- Invoice Display -->
            <div class="flex-fill">
                <CheckInInvoice />
            </div>

        </div>
    </section>

</div>


<style>
	label {
		font-weight: bold;
	}
</style>
