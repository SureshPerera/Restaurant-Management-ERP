@page "/Reservations/Inhouse"
@using MudBlazor
@using ResortManagementApp.Models.Administration.ManageRooms
@using ResortManagementApp.Models.Reservation.DTO
@using ResortManagementApp.Pages.Administration.ManageRoomsCrud
@using ResortManagementApp.Pages.CheckInCheckOut
@layout MainLayout
@inject IJSRuntime JS
@inject ISnackbar Snackbar
@inject HttpClient Http
@inject NavigationManager Nav
<link href="css/inhouse.css" rel="stylesheet" />

<div class="container-fluid py-4">

    <!-- Header -->
    <div class="mb-4 text-center">
        <h2 class="fw-bold rounded py-3 text-white" style="background-color:#344e41;">Inhouse Management</h2>
        <p class="page-subtitle" style="color:white; font-weight:bold">Manage in-house guests, reservations, and billing with ease.</p>
    </div>

    <!-- DATE FILTER / NAVIGATION -->
    <section class="mb-5">
        <div class="card date-filter-card shadow-sm border-0 rounded-4">
            <div class="card-body">

                <div class="d-flex justify-content-center align-items-end flex-wrap gap-4">

                    <!-- SEARCH -->
                    <div>
                        <label class="form-label small fw-semibold">Search Guest</label>
                        <input type="search"
                               class="form-control form-control-sm filter-input"
                               placeholder="Name / NIC / Phone" />
                    </div>

                    <!-- FROM DATE -->
                    <div>
                        <label class="form-label small fw-semibold">From Date</label>
                        <input type="date"
                               class="form-control form-control-sm filter-input" />
                    </div>

                    <!-- TO DATE -->
                    <div>
                        <label class="form-label small fw-semibold">To Date</label>
                        <input type="date"
                               class="form-control form-control-sm filter-input" />
                    </div>

                    <!-- ACTION -->
                    <div class="d-grid">
                        <button class="btn btn-warning btn-sm px-4 filter-btn"
                                @onclick="clickViewAllReservations">
                            View Report
                        </button>
                    </div>

                </div>

            </div>
        </div>
    </section>


    <!-- Booking & In-House Summary -->
    <section class="mb-4">
        <div class="row g-3">

            <!-- Booking Grid -->
            <div class="col-lg-9">
                <div class="card rounded-3 border-0 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0">Current Bookings</h6>
                    </div>
                    <div class="card-body p-0">
                        <table class="table-hover mb-0 table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Check In Date</th>
                                    <th>Check In Time</th>
                                    <th>Check Out Date</th>
                                    <th>Check Out Time</th>
                                    <th>Adult</th>
                                    <th>Kids</th>
                                    <th>Remark</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in DirectBookinDTO!)
                                {
                                    @if (item.CheckIn == true)
                                    {
                                        <tr>
                                            <td><strong>@item.FirstName</strong></td>
                                            <td>@item.CheckInDate</td>
                                            <td>@item.CheckInTime</td>
                                            <td>@item.CheckOutDate</td>
                                            <td>@item.CheckOutTime</td>
                                            <td>@item.Adult</td>
                                            <td>@item.Kids</td>
                                            <td>@item.Remark</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary"
                                                        @onclick="() => ClickViewDirectBill(item.Id)">
                                                    Bill View
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                    
                                }
                                @foreach (var item in OnlineBookingDto!)
                                {
                                    @if (item.CheckIn == true)
                                    {
                                        <tr>
                                            <td><strong>@item.FirstName</strong></td>
                                            <td>@item.CheckInDate</td>
                                            <td>@item.CheckInTime</td>
                                            <td>@item.CheckOutDate</td>
                                            <td>@item.CheckOutTime</td>
                                            <td>@item.Adult</td>
                                            <td>@item.Kids</td>
                                            <td>@item.Remark</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary"
                                                        @onclick="() => ClickViewOnlineBill(item.Id)">
                                                    Bill View
                                                </button>
                                            </td>
                                        </tr>
                                    }

                                }
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- In-House Summary (Smart Cards) -->
            <div class="col-lg-3 d-flex flex-column gap-3">
                <div class="card rounded-3 border-0 py-3 text-center shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-people-fill fs-2 text-success"></i>
                        <h5 class="mb-1 mt-2">Adults</h5>
                        <p class="fs-5 fw-bold mb-0">@TotalAdults</p>
                    </div>
                </div>

                <div class="card rounded-3 border-0 py-3 text-center shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-child fs-2 text-info"></i>
                        <h5 class="mb-1 mt-2">Kids</h5>
                        <p class="fs-5 fw-bold mb-0">@TotalKids</p>
                    </div>
                </div>

                <div class="card rounded-3 border-0 py-3 text-center shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-baby fs-2 text-warning"></i>
                        <h5 class="mb-1 mt-2">Infants</h5>
                        <p class="fs-5 fw-bold mb-0">-+-</p>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <!-- Meal Breakdown (Smart Cards) -->
    <section class="mb-4">
        <div class="row g-3 text-center">

            <div class="col-md-4">
                <div class="card rounded-3 border-0 p-3 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-cup-straw fs-2 text-primary"></i>
                        <h6 class="mb-1 mt-2">Breakfast</h6>
                        <p class="fw-bold mb-0">10 Meals</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card rounded-3 border-0 p-3 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-egg-fried fs-2 text-warning"></i>
                        <h6 class="mb-1 mt-2">Lunch</h6>
                        <p class="fw-bold mb-0">12 Meals</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card rounded-3 border-0 p-3 shadow-sm">
                    <div class="card-body">
                        <i class="bi bi-basket-fill fs-2 text-danger"></i>
                        <h6 class="mb-1 mt-2">Dinner</h6>
                        <p class="fw-bold mb-0">8 Meals</p>
                    </div>
                </div>
            </div>

        </div>
    </section>
    <!-- Actions & Invoice -->
    <section class="my-5">
        <div class="row g-4">

            <!-- ACTION PANEL -->
            <div class="col-lg-3">
                <div class="card action-card shadow-sm border-0 rounded-4">
                    <div class="card-header text-center fw-bold text-dark bg-warning rounded-top-4">
                        Reservation Actions
                    </div>

                    <div class="card-body d-flex flex-column gap-3">

                        <div class="info-box">
                            <small class="text-muted">Current Room Bill</small>
                            <input class="form-control form-control-sm fw-bold" readonly />
                        </div>

                        <button class="btn btn-outline-success w-100"
                                @onclick="@(() => ClickAddExtra(Id))">
                            ➕ Add Extras
                        </button>

                        <button class="btn btn-outline-danger w-100">
                            ❌ Cancel Reservation
                        </button>

                        @if (PaymentDone)
                        {
                            <button class="btn btn-dark w-100">
                                🚪 Check-Out
                            </button>
                        }

                        <button class="btn btn-primary w-100 fw-semibold"
                                @onclick="@(() => ClickToPay(Id))">
                            💳 Make Payment
                        </button>

                    </div>
                </div>
            </div>

            <!-- INVOICE PANEL -->
            <div class="col-lg-9">
                <div class="card invoice-card shadow-sm border-0 rounded-4">

                    <div class="card-header bg-dark text-white rounded-top-4">
                        <h6 class="mb-0">Invoice Preview</h6>
                    </div>

                    <div class="card-body bg-light">

                        <!-- HEADER -->
                        <div class="invoice-header bg-white rounded-4 p-4 shadow-sm mb-4">
                            <div class="row align-items-center">
                                <div class="col-md-4 text-center">
                                    <img src="/imgs/maindashboard/logo.png" width="120" />
                                    <p class="fw-bold mt-2 mb-0">Master Room Bill</p>
                                    <span class="badge bg-primary">#@Id</span>
                                </div>

                                <div class="col-md-8 text-md-end text-center">
                                    <h5 class="fw-bold mb-1">Solitory Green Resort</h5>
                                    <small class="text-muted">
                                        Oddington Estate, Lindula, Nuwara Eliya<br />
                                        📞 0761733573 | ✉️ sgncabins6@gmail.com
                                    </small>
                                </div>
                            </div>
                        </div>

                        <!-- BOOKING INFO -->
                        <div class="row g-4 mb-4">

                            <div class="col-md-6">
                                <div class="info-card">
                                    <h6>Reservation Info</h6>
                                    <div><strong>Status:</strong> @Conformation</div>
                                    <div><strong>Customer Type:</strong> @CustomerType</div>
                                    <div><strong>Accommodation:</strong> @AccomadationType</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="info-card">
                                    <h6>Customer Details</h6>
                                    <div><strong>Name:</strong> @name</div>
                                    <div><strong>Phone:</strong> @phone</div>
                                    <div><strong>Email:</strong> @email</div>
                                    <div><strong>Agent:</strong> @agentName</div>
                                </div>
                            </div>

                        </div>

                        <!-- STAY DETAILS -->
                        <div class="info-card mb-4">
                            <h6>Stay Summary</h6>
                            <div class="row text-center">
                                <div class="col"><small>From</small><br />@CheckInDate.ToShortDateString()</div>
                                <div class="col"><small>To</small><br />@CheckOutDate.ToShortDateString()</div>
                                <div class="col"><small>Adults</small><br />@adults</div>
                                <div class="col"><small>Kids</small><br />@kids</div>
                                <div class="col"><small>Total</small><br />@total</div>
                            </div>
                        </div>

                        <!-- BILL SUMMARY -->
                        <div class="info-card">
                            <h6>Bill Summary</h6>
                            <div class="d-flex justify-content-between">
                                <span>Adults Total</span><span>@adultsStayTotal</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Kids Total</span><span>@kidsStayTotal</span>
                            </div>
                            <div class="d-flex justify-content-between fw-bold">
                                <span>Grand Total</span><span>@grandTotal</span>
                            </div>
                            <div class="d-flex justify-content-between text-danger">
                                <span>Advance Paid</span><span>@totalAdvancePayment</span>
                            </div>
                            <div class="d-flex justify-content-between text-success fw-bold">
                                <span>Balance (LKR)</span><span>@totalBalanceLKR</span>
                            </div>
                        </div>

                        <!-- FOOTER -->
                        <div class="text-center mt-4">
                            <small class="text-muted">
                                Transparent Management • Powered by Liya SOFT
                            </small>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </section>

</div>


<style>
    .card-body i {
        display: block;
    }

    .card-body h5, .card-body h6 {
        font-weight: bold;
    }
    h2, h6 {
        font-weight: bold;
    }

    .card {
        transition: 0.3s ease;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.08);
        }

    .date-filter-card {
        background: linear-gradient(135deg, #fefae0, #edf6f0);
        transition: all 0.3s ease;
    }

    .filter-input {
        min-width: 180px;
        border-radius: 10px;
    }

    .filter-btn {
        border-radius: 10px;
        font-weight: 600;
    }

    .date-filter-card:hover {
        box-shadow: 0 12px 30px rgba(0,0,0,.12);
    }

</style>

@inject HttpClient http
@code {
	public Guid Id;
	public List<Rooms>? ManageRoomsModel { get; set; } = new List<Rooms>();
	public List<RoomBookingDetails> RoomsBookingDetails = new List<RoomBookingDetails>();
	public List<DirectBookinDTO>? DirectBookinDTO = new List<DirectBookinDTO>();
	public List<OnlineBookingDto>? OnlineBookingDto = new List<OnlineBookingDto>();
	public int TotalAdults { get; set; }
	public int TotalKids { get; set; }

	public bool PagedateLoad;
	public string? name;
	public string? address;
	public string? phone;
	public string? email;
	public string? agentName = "None";
	public double adults;
	public double kids;
	public string? basis;
	public double total;
	public double adultsStayTotal;
	public double kidsStayTotal;
	public double grandTotal;
	public double totalAdvancePayment;
	public double totalBalanceLKR;
	public double totalBalanceUSD;
	public bool Conformation { get; set; }
	public string? status;
	public Guid GuidId;
	public Guid ReserveNo;
	public string? CustomerType;
	public string? AccomadationType;
	public string? VoucherNo;
	public string? TourNo;
	public decimal USDExch;
	public decimal RoomRate;
	public string? Basis;
	public DateTime CheckInDate;
	public DateTime CheckOutDate;
	public TimeOnly arrivalTime;
	public TimeOnly depatureTime;
	public bool showNotification = false;
	public bool CheckIn;
	public bool CheckOut;
	public bool PaymentDone = false;

	protected override async Task OnInitializedAsync()
	{
		try
		{
			DirectBookinDTO = await http.GetFromJsonAsync<List<DirectBookinDTO>>("https://localhost:4000/api/DirectBooking");
			OnlineBookingDto = await http.GetFromJsonAsync<List<OnlineBookingDto>>("https://localhost:4000/api/OnlineBooking");

			TotalAdults = DirectBookinDTO!.Sum(a=>a.Adult) + OnlineBookingDto!.Sum(a=>a.Adult);
			TotalKids = DirectBookinDTO!.Sum(a => a.Kids) + OnlineBookingDto!.Sum(a => a.Kids);
		}
		catch (Exception ex)
		{
			Console.WriteLine($"Inhouse Err : {ex.Message}");    
		}

	}   





	public class RoomBookingDetails
	{
		public string? Room { get; set; }
		public string? Guest { get; set; }
		public string? Basic { get; set; }
		public string? Type { get; set; }
		public string? CheckIn { get; set; }
		public string? CheckOut { get; set; }

	}
	public async Task ClickViewDirectBill(Guid id)
	{
		try
		{
			var Direct = await http.GetFromJsonAsync<DirectBookinDTO>(
				$"https://localhost:4000/api/DirectBooking/{id}"
			);
			this.Id = id;
			total = kids + adults;
			name = $"{Direct?.FirstName + "" + Direct?.LastName}";
			address = Direct?.Address ?? "";
			phone = Direct?.PhoneNumber ?? "";
			email = Direct?.EmailAddress ?? "";
			total = adults + kids;
			Conformation = Direct!.Conformation;
			adults = Direct.Adult;
			kids = Direct.Kids;
			CheckInDate = Direct!.CheckInDate;
			CheckOutDate = Direct!.CheckOutDate;
			email = Direct?.EmailAddress ?? "";
			phone = Direct?.PhoneNumber ?? "";
			arrivalTime = Direct!.CheckInTime;
			depatureTime = Direct!.CheckOutTime;
			CheckIn = Direct.CheckIn;
			CheckOut = Direct.CheckOut;
			PagedateLoad = true;
			status = "DirectBooking";
			var guid = Guid.NewGuid();
			GuidId = guid;

			await JS.InvokeVoidAsync("scrollToSection", "invoice-section");

			StateHasChanged();
		}
		catch (Exception ex)
		{
			Console.WriteLine($"DirectBillView Err : {ex.Message}");
		}
	}
	public async Task ClickViewOnlineBill(Guid id)
	{
		try
		{
			var Online = await Http.GetFromJsonAsync<OnlineBookingDto>(
						$"https://localhost:4000/api/OnlineBooking/{id}"
					);

			this.Id = id;
			total = kids + adults;
			name = $"{Online?.FirstName + " " + Online?.LastName}";
			address = Online?.Address ?? "";
			phone = Online?.PhoneNumber ?? "";
			email = Online?.EmailAddress ?? "";
			CheckInDate = Online!.CheckInDate;
			CheckOutDate = Online!.CheckOutDate;
			total = adults + kids;
			Conformation = Online!.Conformation;
			address = Online?.Address ?? "";
			email = Online?.EmailAddress ?? "";
			phone = Online?.PhoneNumber ?? "";
			arrivalTime = Online!.CheckInTime;
			depatureTime = Online!.CheckOutTime;
			CheckIn = Online.CheckIn;
			CheckOut = Online.CheckOut;
			PagedateLoad = true;

			status = "OnlineBooking";

			await JS.InvokeVoidAsync("scrollToSection", "invoice-section");
			StateHasChanged();
		}catch(Exception ex)
		{
			Console.WriteLine($"OnlineBillView Err : {ex.Message}");

		}
	}

	public async Task ClickToPay(Guid id)
	{
		try
		{
			Nav.NavigateTo($"/Payments/Checkout/{id}");
			return;

		}catch(Exception ex)
		{
			Console.WriteLine($"Payment Err : {ex.Message}");
		}
	}
	public async Task RoomSection()
	{
		ManageRoomsModel = await http.GetFromJsonAsync<List<Rooms>>($"https://localhost:4000/api/Rooms");
	}


	private  Task ClickAddExtra(Guid Id)
	{
		throw new NotImplementedException();
	}
	private Task clickViewAllReservations(MouseEventArgs args)
	{
		throw new NotImplementedException();
	}
}
