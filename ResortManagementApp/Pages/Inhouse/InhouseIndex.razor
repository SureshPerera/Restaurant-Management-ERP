@page "/Reservations/Inhouse"
@using ResortManagementApp.Pages.CheckInCheckOut
@layout MainLayout

<div>
	<h3 class="mb-3 text-center">Reservation Management</h3>
</div>
<div>
	<section>
		<div class="justify-content-around flex" style="backdrop-filter:blur(100%); background-color:cornsilk">
			<div>
				<input class="btn btn-warning" type="button" name="previousDay" value="Previous Day" />
			</div>
			<div >
				<input style="height: 2.4rem;width: fit-content;" class="" type="date" name="calander" value=""  />
			</div>
			<div>
				<input class="btn btn-warning" type="button" name="nextDay" value="Next Day" />
			</div>
			<div>
				<label>Pick Date</label>
				<input style="height: 2.4rem;width: fit-content;" type="date" name="pickDate" value="" />
			</div>
		</div>
	</section>
	<br />
	<section>
		<div class="justify-content-between flex flex-wrap" style="width: 100%">
			<div>
				<input class="btn btn-success" type="button" name="viewBooking" value="View Booking" />
			</div>
			<div class="flex-wrap">
				<ViewBookingGrid/>
			</div>
			<div>
				<div style="padding:10px; background-color: azure;">
					<label style="font-size: 18px;">In House List</label><br />
					<div>
						<label>Adults -</label>
						<label>19</label><br />
					</div>
					<div>
						<label>Kids -</label>
						<label>0</label><br />
					</div>
					<div>
						<label>Infunts -</label>
						<label>0</label>
					</div>
					
				</div>
			</div>
		</div>
	</section>
	<section>
		<div style=" width:100%;" class="justify-content-center flex" >
			<div style="padding:10px; background-color: azure;">
				<MealBrackDown/>
			</div>
		</div>
	</section>
	<br />
	<section>
		<div class="justify-content-around flex">
			<div style="display:flex; flex-direction: column; gap: 1rem;">
				<div style="padding:10px; background-color: azure;">
					<label >Current Room Bill</label>
					<input style="height: 1.5rem; width: 6rem; background-color: aliceblue" type="text" name="roomBill" value="" />
				</div>
				<div>
					<input class="btn btn-success" type="button" name="addExtras" value="Add Extras" />
				</div>
				<div>
					<input class="btn btn-success" type="button" name="AmendStay" value="Amend Stay" />
				</div>
				<div>
					<input class="btn btn-success" type="button" name="pay" value="Pay" />
				</div>
				<div>
					<input class="btn btn-success" type="button" name="checkOut" value="Check-Out" />
				</div>
				<div>
					<input class="btn btn-success" type="button" name="cancellation" value="Cancellation" />
				</div>
			</div>
			
			
			<div style="width: 80%">
				<div>
					<CheckInInvoice />
				</div>
			</div>
		</div>
		
	</section>
</div>

<style>
	label {
		font-weight: bold;
	}
</style>
