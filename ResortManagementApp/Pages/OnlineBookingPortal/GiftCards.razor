@page "/giftcards"

<link href="css/giftcards.css" rel="stylesheet" />
<div style="background-color: #A3B18A;margin-top: -6.5rem;  height: 1200px">
    <div class="gc-container">

        <h2 class="gc-title" style="color:black">Solitary Green Resort Gift Cards</h2>
        <p class="gc-subtitle" style="color:black">
            Give the gift of unforgettable experiences. Perfect for birthdays, anniversaries, weddings,
            corporate gifting, or any special occasion.
        </p>

        <div class="gc-grid">

            <!-- Card 1 -->
            <div class="gc-card">
                <img src="/imgs/GiftCardsImg/giftCard.png" alt="Luxury Stay Gift Card" />
                <h3>Luxury Stay Gift Card</h3>
                <p>Offer someone a luxurious getaway at our resort with premium room experiences.</p>
                <span class="gc-price">LKR 25,000</span>
                <button class="gc-btn">Buy Now</button>
            </div>

            <!-- Card 2 -->
            <div class="gc-card">
                <img src="/imgs/GiftCardsImg/giftCard.png" alt="Spa Gift Card" />
                <h3>Spa Wellness Gift Card</h3>
                <p>Perfect for those who love relaxation, massage therapies, and spa healing.</p>
                <span class="gc-price">LKR 10,000</span>
                <button class="gc-btn">Buy Now</button>
            </div>

            <!-- Card 3 -->
            <div class="gc-card">
                <img src="/imgs/GiftCardsImg/giftCard.png" alt="Dining Gift Card" />
                <h3>Fine Dining Gift Card</h3>
                <p>An ideal gift for food lovers to enjoy a premium dining experience.</p>
                <span class="gc-price">LKR 7,500</span>
                <button class="gc-btn">Buy Now</button>
            </div>

            <!-- Card 4 -->
            <div class="gc-card">
                <img src="/imgs/GiftCardsImg/giftCard.png" alt="Adventure Gift Card" />
                <h3>Adventure & Activity Card</h3>
                <p>Includes hiking, cycling tours, lake activities, and nature experiences.</p>
                <span class="gc-price">LKR 12,000</span>
                <button class="gc-btn">Buy Now</button>
            </div>

            <!-- Card 5 -->
            <div class="gc-card">
                <img src="/imgs/GiftCardsImg/giftCard.png" alt="Couple Experience Card" />
                <h3>Romantic Couple Gift Card</h3>
                <p>Perfect for couples looking to enjoy romantic dinners and scenic moments.</p>
                <span class="gc-price">LKR 15,000</span>
                <button class="gc-btn">Buy Now</button>
            </div>

            <!-- Card 6 -->
            <div class="gc-card">
                <img src="/imgs/GiftCardsImg/giftCard.png" alt="General Gift Card" />
                <h3>General Purpose Gift Card</h3>
                <p>Flexible and customizable — can be used for any resort service.</p>
                <span class="gc-price">Custom Value</span>
                <button class="gc-btn">Buy Now</button>
            </div>

        </div>

    </div>
</div>

