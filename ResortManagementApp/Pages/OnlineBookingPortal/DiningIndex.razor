@page "/dining"
@layout ClientLayout

<link href="css/dining.css" rel="stylesheet" />
<div style="background-color: #A3B18A;margin-top: -6.5rem;  height: 600px">
    <div class="dining-container">
        <h2 class="dining-title" style="color:black">Dining Experience</h2>
        <p class="dining-subtitle" style="color:black">
            Explore our signature dining options crafted with fresh ingredients and authentic Sri Lankan flavors.
        </p>

        <div class="dining-grid">

            <!-- Restaurant Option -->
            <div class="dining-card">
                <div class="dining-image">
                    <img src="imgs/DiningImg/RestaurantDining.png" alt="Restaurant Dining" />
                </div>
                <h3>Restaurant Dining</h3>
                <p class="dining-info">
                    Enjoy a variety of continental, Sri Lankan, and fusion dishes in our cozy indoor restaurant.
                </p>
                <button class="dining-btn">View Menu</button>
            </div>

            <!-- Outdoor BBQ -->
            <div class="dining-card">
                <div class="dining-image">
                    <img src="/imgs/DiningImg/OutdoorBBQ.jpg" alt="Outdoor BBQ" />
                </div>
                <h3>Outdoor BBQ</h3>
                <p class="dining-info">
                    Experience a relaxing outdoor BBQ night with grilled seafood, meats, and live cooking.
                </p>
                <button class="dining-btn">Book BBQ Night</button>
            </div>

            <!-- Room Service -->
            <div class="dining-card">
                <div class="dining-image">
                    <img src="/imgs/DiningImg/RoomService.jpg" alt="Room Service" />
                </div>
                <h3>Room Service</h3>
                <p class="dining-info">
                    Enjoy meals delivered directly to your room — comfort and luxury combined.
                </p>
                <button class="dining-btn">Order Now</button>
            </div>

            <!-- Special Events -->
            <div class="dining-card">
                <div class="dining-image">
                    <img src="/imgs/DiningImg/SpecialEventDining.jpeg" alt="Event Dining" />
                </div>
                <h3>Special Event Dining</h3>
                <p class="dining-info">
                    Celebrate birthdays, anniversaries, or special gatherings with custom dining setups.
                </p>
                <button class="dining-btn">Reserve Event</button>
            </div>

        </div>
    </div>
</div>


