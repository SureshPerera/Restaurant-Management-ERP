@page "/experiences"

<link href="css/experience.css" rel="stylesheet" />
<div style="background-color: #A3B18A;margin-top: -6.5rem;  height: 1100px">
    <div class="exp-container">

        <h2 class="exp-title" style="color:black">Unforgettable Experiences</h2>
        <p class="exp-subtitle" style="color:black">
            Discover a curated collection of unique activities designed to immerse you in the natural beauty
            and cultural essence of Solitary Green Resort. Make your stay memorable with these exclusive experiences.
        </p>

        <div class="exp-grid">

            <!-- Experience 1 -->
            <div class="exp-card">
                <img src="/imgs/ExperienceImg/TeaEstateGuidedTour.jpg" alt="Tea Estate Tour" />
                <h3>Tea Estate Guided Tour</h3>
                <p>Walk through lush estates and learn the secrets of Sri Lankan tea making.</p>
                <button class="exp-btn">Explore</button>
            </div>

            <!-- Experience 2 -->
            <div class="exp-card">
                <img src="/imgs/ExperienceImg/LakeBoating&Canoeing.jpg" alt="Lake Boating" />
                <h3>Lake Boating & Canoeing</h3>
                <p>A peaceful and scenic boating experience surrounded by misty mountain views.</p>
                <button class="exp-btn">Explore</button>
            </div>

            <!-- Experience 3 -->
            <div class="exp-card">
                <img src="/imgs/ExperienceImg/MountainHikingTrails.jpg" alt="Hiking Adventure" />
                <h3>Mountain Hiking Trails</h3>
                <p>Guided hikes through stunning nature trails with breathtaking viewpoints.</p>
                <button class="exp-btn">Explore</button>
            </div>

            <!-- Experience 4 -->
            <div class="exp-card">
                <img src="/imgs/ExperienceImg/NightCampfireExperience.jpg" alt="Night Campfire" />
                <h3>Night Campfire Experience</h3>
                <p>Relax under the stars with music, storytelling, and warm campfire vibes.</p>
                <button class="exp-btn">Explore</button>
            </div>

            <!-- Experience 5 -->
            <div class="exp-card">
                <img src="/imgs/ExperienceImg/ScenicCyclingTours.jpg" alt="Cycling Tours" />
                <h3>Scenic Cycling Tours</h3>
                <p>Enjoy refreshing guided bike rides around the resort and local attractions.</p>
                <button class="exp-btn">Explore</button>
            </div>

            <!-- Experience 6 -->
            <div class="exp-card">
                <img src="/imgs/ExperienceImg/SriLankanCookingClass.jpeg" alt="Cooking Class" />
                <h3>Sri Lankan Cooking Class</h3>
                <p>Join our chef to learn authentic Sri Lankan cooking techniques and spices.</p>
                <button class="exp-btn">Explore</button>
            </div>

            <!-- Experience 7 -->
            <div class="exp-card">
                <img src="/imgs/ExperienceImg/MorningYogaSession.jpg" alt="Yoga Session" />
                <h3>Morning Yoga Session</h3>
                <p>Start your day with peaceful lakefront yoga guided by experienced instructors.</p>
                <button class="exp-btn">Explore</button>
            </div>

            <!-- Experience 8 -->
            <div class="exp-card">
                <img src="/imgs/ExperienceImg/BirdWatchingWalks.jpg" alt="Bird Watching" />
                <h3>Bird Watching Walks</h3>
                <p>Discover local bird species with our naturalist experts on guided nature walks.</p>
                <button class="exp-btn">Explore</button>
            </div>

        </div>

    </div>

</div>
