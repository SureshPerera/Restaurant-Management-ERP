@page "/offers"

<link href="css/offers.css" rel="stylesheet" />

<div class="offers-container">

    <h2 class="offers-title">Exclusive Resort Offers</h2>
    <p class="offers-subtitle">
        Discover special deals designed to enhance your stay at Solitary Green Resort.
        Enjoy luxury experiences at the best available rates.
    </p>

    <div class="offers-grid">

        <!-- Offer 1 -->
        <div class="offer-card">
            <img src="/imgs/OffersImg/RomanticGetawayPackage.jpg" alt="Romantic Getaway" />
            <div class="offer-content">
                <h3>Romantic Getaway Package</h3>
                <p>Enjoy a candlelight dinner, spa treatment, and 1-night stay with scenic views.</p>
                <span class="offer-tag">20% OFF</span>
                <button class="offer-btn">View Details</button>
            </div>
        </div>

        <!-- Offer 2 -->
        <div class="offer-card">
            <img src="/imgs/OffersImg/FamilyHolidayPackage.jpg" alt="Family Holiday Package" />
            <div class="offer-content">
                <h3>Family Holiday Package</h3>
                <p>Special rates for families with free kids’ meals and fun activities.</p>
                <span class="offer-tag">15% OFF</span>
                <button class="offer-btn">View Details</button>
            </div>
        </div>

        <!-- Offer 3 -->
        <div class="offer-card">
            <img src="/imgs/OffersImg/SpaWellnessEscape.jpg" alt="Spa Wellness Offer" />
            <div class="offer-content">
                <h3>Spa Wellness Escape</h3>
                <p>Full-body massage + herbal steam bath for complete relaxation.</p>
                <span class="offer-tag">25% OFF</span>
                <button class="offer-btn">View Details</button>
            </div>
        </div>

        <!-- Offer 4 -->
        <div class="offer-card">
            <img src="/imgs/OffersImg/Adventure&NatureTrail.jpg" alt="Adventure Package" />
            <div class="offer-content">
                <h3>Adventure & Nature Trail</h3>
                <p>Includes guided tours, hiking, tea estate walk & lake activities.</p>
                <span class="offer-tag">10% OFF</span>
                <button class="offer-btn">View Details</button>
            </div>
        </div>

        <!-- Offer 5 -->
        <div class="offer-card">
            <img src="/imgs/OffersImg/LuxuryHoneymoonPackage.jpg" alt="Honeymoon Package" />
            <div class="offer-content">
                <h3>Luxury Honeymoon Package</h3>
                <p>Romantic suite, welcome champagne, and flower arrangements.</p>
                <span class="offer-tag">Special Rate</span>
                <button class="offer-btn">View Details</button>
            </div>
        </div>

        <!-- Offer 6 -->
        <div class="offer-card">
            <img src="/imgs/OffersImg/LongStayDiscount.jpg" alt="Long Stay Offer" />
            <div class="offer-content">
                <h3>Long Stay Discount</h3>
                <p>Stay 5 nights and get a complimentary night & special amenities.</p>
                <span class="offer-tag">Free Night</span>
                <button class="offer-btn">View Details</button>
            </div>
        </div>

        <!-- Offer 7 -->
        <div class="offer-card">
            <img src="/imgs/OffersImg/Bed&BreakfastOffer.jpg" alt="Bed & Breakfast" />
            <div class="offer-content">
                <h3>Bed & Breakfast Offer</h3>
                <p>Relaxing stay with complimentary breakfast for two.</p>
                <span class="offer-tag">Limited Time</span>
                <button class="offer-btn">View Details</button>
            </div>
        </div>

    </div>

</div>
