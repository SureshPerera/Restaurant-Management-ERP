	}
	html {
		margin: 0;
		padding: 0;
	}

	.card-header {
		top: 0;
		padding: 5px;
		background-color: #2c3e50;
		margin: 0;
		width: 100%;
		height: 2.7rem;
		display: flex;
		justify-content: right;
		flex-wrap: wrap;
		z-index: 1000;
	}

	.fixed-div {
		position: sticky; /* Makes the div sticky */
		top: 0; /* Sticks the div to the top of the page */
		background-color: #C5E1A5; /* Background color (optional) */
		padding: 10px; /* Padding for the div */
		/* Optional border */
		z-index: 1000; /* Ensures the div stays above other content */
		transition: background-color 0.3s ease;
		font-family: cursive;
		justify-content: center;
		font-weight: bold;
		display: flex;
	}
	
	a {
		color: antiquewhite; /* normal state (dark green) */
		text-decoration: none; /* remove underline */
		font-weight: 500;
		transition: color 0.3s ease; /* smooth color change */
	}

		a:hover {
			color:blue; /* hover state (forest green) */
			text-decoration: underline; /* optional underline on hover */
		}
</style>

